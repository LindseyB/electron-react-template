{
  "name": "electron-react-template",
  "version": "1.0.0",
  "description": "A template for an electron app using react",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "start:dev": "cross-env ENVIRONMENT=dev electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "webpack",
    "build:watch": "webpack-dev-server --hot",
    "lint": "eslint \"src/*.js\"",
    "lint:fix": "eslint --fix \"src/*.js\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky install",
    "dev": "concurrently \"npm run start:dev\" \"npm run build:watch\""
  },
  "repository": "https://github.com/LindseyB/electron-react-template",
  "lint-staged": {
    "*.js": "eslint --fix src/*.js",
    "**/*": "prettier --write --ignore-unknown"
  },
  "author": "LindseyB",
  "license": "CC0-1.0",
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@electron-forge/cli": "^6.3.0",
    "@electron-forge/maker-deb": "^6.3.0",
    "@electron-forge/maker-rpm": "^6.3.0",
    "@electron-forge/maker-squirrel": "^6.3.0",
    "@electron-forge/maker-zip": "^6.3.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.5.0",
    "eslint": "^8.46.0",
    "eslint-plugin-react": "^7.33.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "3.0.1",
    "sass": "^1.65.1",
    "sass-loader": "^13.3.2",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "babel-loader": "^9.1.3",
    "bulma": "^0.9.4",
    "css-loader": "^6.8.1",
    "electron-squirrel-startup": "^1.0.0",
    "node-sass": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_quick_start"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
