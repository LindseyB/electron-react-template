{
  "name": "electron-react-template",
  "version": "1.0.0",
  "description": "A template for an electron app using react",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "start:dev": "cross-env ENVIRONMENT=dev electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "webpack",
    "build:watch": "webpack-dev-server --hot",
    "lint": "eslint \"src/*.js\"",
    "lint:fix": "eslint --fix \"src/*.js\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky install",
    "dev": "concurrently \"npm run start:dev\" \"npm run build:watch\""
  },
  "repository": "https://github.com/LindseyB/electron-react-template",
  "lint-staged": {
    "*.js": "eslint --fix src/*.js",
    "**/*": "prettier --write --ignore-unknown"
  },
  "author": "LindseyB",
  "license": "CC0-1.0",
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "sass": "^1.91.0",
    "sass-loader": "^16.0.5",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "babel-loader": "^10.0.0",
    "bulma": "^1.0.4",
    "css-loader": "^7.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "node-sass": "^9.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.1.1",
    "style-loader": "^4.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_quick_start"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
